<div class="constainer m-4">
  <h1>餐廳編輯</h1>
  <form action="/restaurant/{{ restaurant._id }}/edit" method="POST">
    <div class="form-row mt-3">
      <div class="form-group col-md-6">
        <label for="name">餐廳名稱</label>
        <input type="text" class="form-control" id="name" name="name" value="{{ restaurant.name}}">
      </div>
      <div class="form-group col-md-6">
        <label for="name_en">英文店名</label>
        <input type="text" class="form-control" id="name_en" name="name_en" value="{{ restaurant.name_en}}">
      </div>
      <div class="form-group col-md-6">
        <label for="category">類別</label>
        <input list="categories" class="form-control" id="category" name="category" value="{{ restaurant.category}}">
        <datalist id="categories">
          <option>美式</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
          <option>咖啡</option>
          <option>酒吧</option>
          <option>中東料理</option>
        </datalist>
      </div>
      <div class="form-group col-md-6">
        <label for="phone">電話</label>
        <input type="text" class="form-control" id="phone" name="phone" value="{{ restaurant.phone}}">
      </div>
      <div class="form-group col-md-6">
        <label for="location">地址</label>
        <input type="text" class="form-control" id="location" name="location" value="{{ restaurant.location}}">
      </div>
      <div class="form-group col-md-6">
        <label for="rating">評分</label>
        <input type="Number" class="form-control" id="rating" min="0" max="5" step="0.1" name="rating" value="{{ restaurant.rating}}">
      </div>
      <div class="form-group col-md-12">
        <label for="description">餐廳描述</label>
        <input type="text" class="form-control" id="description" name="description" value="{{ restaurant.description}}">
      </div>
      <div class="form-group col-md-12">
        <label for="image">餐廳圖片</label>
        <input type="text" class="form-control" id="image" name="image" value="{{ restaurant.image}}">
      </div>
      <div class="form-group col-md-12">
        <label for="google_map">地圖連結</label>
        <input type="url" class="form-control" id="google_map" name="google_map" value="{{ restaurant.google_map}}">
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-outline-info btn-lg mx-5">Save</button>
      <a href="/"><button type="button" class="btn btn-outline-info btn-lg">Back</button></a>
    </div>
  </form>
</div>