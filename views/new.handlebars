<div class="constainer m-4">
  <h1>新增餐廳</h1>
  <form action="/restaurants" method="POST">
    <div class="form-row mt-3">
      <div class="form-group col-md-6">
        <label for="name"><span style="color: red">*</span>餐廳</label>
        <input type="text" class="form-control" id="name" placeholder="輸入餐廳名稱" name="name" required>
      </div>
      <div class="form-group col-md-6">
        <label for="name_en"><span style="color: red">*</span>英文店名</label>
        <input type="text" class="form-control" id="name_en" placeholder="餐廳英文名字" name="name_en" required>
      </div>
      <div class="form-group col-md-6">
        <label for="category"><span style="color: red">*</span>類別</label>
        <input list="categories" class="form-control" id="category" name="category" required>
        <datalist id="categories">
          <option>美式</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
          <option>咖啡</option>
          <option>酒吧</option>
          <option>中東料理</option>
        </datalist>
      </div>
      <div class="form-group col-md-6">
        <label for="phone"><span style="color: red">*</span>電話</label>
        <input type="number" class="form-control" id="phone" placeholder="02-12345678" name="phone" required>
      </div>
      <div class="form-group col-md-6">
        <label for="location"><span style="color: red">*</span>地址</label>
        <input type="text" class="form-control" id="location" name="location" required>
      </div>
      <div class="form-group col-md-6">
        <label for="rating"><span style="color: red">*</span>評分</label>
        <input type="Number" class="form-control" id="rating" min="0" max="5" step="0.1" name="rating" required>
      </div>
      <div class="form-group col-md-12">
        <label for="description" rows="3" cols="20"><span style="color: red">*</span>餐廳描述</label>
        <textarea class="form-control" name="description" id="description"></textarea>
        {{!-- <input type="text" class="form-control" id="description" name="description" required> --}}
      </div>
      <div class="form-group col-md-12">
        <label for="image"><span style="color: red">*</span>餐廳圖片</label>
        <input type="url" class="form-control" id="image" name="image" placeholder="http://..." required>
      </div>
      <div class="form-group col-md-12">
        <label for="google_map"><span style="color: red">*</span>地圖連結</label>
        <input type="url" class="form-control" id="google_map" name="google_map" placeholder="http://..." required>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-outline-info mx-5">Add</button>
      <a href="/"><button type="button" class="btn btn-outline-info btn-lg">Back</button></a>
    </div>
  </form>
</div>
